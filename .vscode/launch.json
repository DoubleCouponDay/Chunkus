{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "gdb",
            "request": "attach",
            "name": "(gdb) Debug Remote Server",
            "target": "localhost:16970",
            "remote": true,
            "cwd": "${workspaceRoot}\\build\\C_part",
            "executable": "${workspaceRoot}\\build\\C_part\\vec_tests.exe",
            "valuesFormatting": "parseText"
        },
        {
            "name": "(Windows) Launch Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\C_part\\vec_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\build\\C_part",
            "environment": [],
            "console": "internalConsole",
            "requireExactSource": false,
        },
        {
            "name": "(Windows) Launch one test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\C_part\\build\\bin\\tests.exe",
            "args": ["jpeg_dcd"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\C_part\\build\\bin",
            "environment": [],
            "console": "internalConsole",
            "requireExactSource": false
        },
        {
            "name": "(Linux) Launch test",
            "MIMode": "gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\install\\bin\\vec_tests",
            "args": [],
            "cwd": "${workspaceFolder}\\install\\bin",
            "externalConsole": false,
            "internalConsoleOptions": "neverOpen",
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        },
        {
            "name": "(Linux) Launch Vectorizer_GUI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\Cpp_part\\build\\Vectorizer_GUI",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\Cpp_part\\build",
            "environment": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch trampoline (Linux)",
            "args": ["true"],
            "program": "${workspaceFolder}/Rust_part/target/debug/trampoline",
            "cwd": "${workspaceFolder}/Rust_part",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Launch the fkin GUI",
            "args": ["true"],
            "program": "${workspaceFolder}/Cpp_part/build/Vectorizer_GUI",
            "cwd": "${workspaceFolder}/Cpp_part/build",
            "MIMode": "gdb"
        },
    ]
}
